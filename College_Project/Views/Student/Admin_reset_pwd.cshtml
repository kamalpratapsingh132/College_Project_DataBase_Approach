@model College_Project.Models.resetpasswordmodel
@{
    ViewBag.Title = "Admin_reset_pwd";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/js/bootstrap.min.js"></script>
    <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
    <!------ Include the above in your HEAD tag ---------->

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
    <title>resetpassword</title>
    <style>
        .change {
            width: 35%;
        }
    </style>
</head>

<body style="margin-left:20px">
    <div>
        @using (Html.BeginForm("Admin_reset_pwd", "Student", FormMethod.Post))
        {
            <div>
                <div><h3>Reset Password</h3></div>
                <hr />
                <div class="form-group">
                    @Html.LabelFor(model => model.Otp, htmlAttributes: new { @class = "control-label" })
                    <div>
                        @Html.EditorFor(model => model.Otp, new { htmlAttributes = new { @class = "form-control change" } })
                        @Html.ValidationMessageFor(model => model.Otp, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Newpassword, htmlAttributes: new { @class = "control-label" })<br>
                    <div>
                        @Html.EditorFor(model => model.Newpassword, new { htmlAttributes = new { @class = "form-control change" } })
                        @Html.ValidationMessageFor(model => model.Newpassword, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Confirmnewpassword, htmlAttributes: new { @class = "control-label" })
                    <div>
                        @Html.EditorFor(model => model.Confirmnewpassword, new { htmlAttributes = new { @class = "form-control change" } })
                        @Html.ValidationMessageFor(model => model.Confirmnewpassword, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div>
                        <input type="submit" value="Reset Password" class="btn-primary btn-sm" />
                    </div>
                </div>
                <div>
                    <span style="color:red">@ViewBag.Message</span>
                </div>
            </div>
        }
    </div>
</body>
</html>


